<UserControl x:Class="SmartCmdArgs.View.UserControls.SettingsCheckBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:c="clr-namespace:SmartCmdArgs.View.Converter"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="16" d:DesignWidth="300">
    <CheckBox IsChecked="{Binding IsChecked, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type UserControl}}}" IsThreeState="True">
        <StackPanel Orientation="Horizontal">
            <TextBlock FontWeight="Bold" Text="{Binding LabelText, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type UserControl}}}"/>
            <TextBlock Margin="5,0,0,0" Visibility="{Binding IsChecked, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type CheckBox}}, Converter={c:NullToVisibilityConverter HideVisibility=Collapsed, Inverted=True}}">
                (Default: <Run Text="{Binding DefaultValue, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type UserControl}}}" />)
            </TextBlock>
        </StackPanel>
    </CheckBox>
</UserControl>
